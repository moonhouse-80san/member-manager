                return;
            }

            if (startTime && endTime) {
                if (startTime >= endTime) {
                    showAlert('ì¢…ë£Œì‹œê°„ì€ ì‹œì‘ì‹œê°„ë³´ë‹¤ ì»¤ì•¼ í•©ë‹ˆë‹¤!');
                    return;
                }
                
                // ì‹œê°„ ì¶©ëŒ ê²€ì‚¬
                const conflict = checkTimeConflict(day, startTime, endTime);
                if (conflict.conflict) {
                    showAlert(`ì‹œê°„ ì¶©ëŒ! ${conflict.memberName} íšŒì›ì´ ì´ë¯¸ ${dayNames[day]} ${conflict.existingTime}ì— ë“±ë¡ë˜ì–´ ìˆìŠµë‹ˆë‹¤.`);
                    return;
                }
            }

            const member = {
                name,
                phone,
