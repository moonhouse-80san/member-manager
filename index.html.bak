            'ëª©': 'ëª©ìš”ì¼',
            'ê¸ˆ': 'ê¸ˆìš”ì¼',
            'í† ': 'í† ìš”ì¼',
            'ì¼': 'ì¼ìš”ì¼'
        };

        // Firebase ìë™ ì´ˆê¸°í™”
        try {
            firebase.initializeApp(firebaseConfig);
            firebaseDb = firebase.database();
            loadFromFirebase();
            listenToFirebaseChanges();
