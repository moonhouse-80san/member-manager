        function loadFromFirebase() {
            firebaseDb.ref('members').once('value', (snapshot) => {
                const data = snapshot.val();
                if (data) {
                    members = Object.values(data);
                    filteredMembers = [...members];
                    renderMembers();
                    renderSchedule();
                }
            });

            firebaseDb.ref('settings').once('value', (snapshot) => {
                const data = snapshot.val();
                if (data && data.clubName) {
                    settings.clubName = data.clubName;
                    document.getElementById('clubNameDisplay').textContent = data.clubName;
                }
            });
        }

        function listenToFirebaseChanges() {
            firebaseDb.ref('members').on('value', (snapshot) => {
                const data = snapshot.val();
                if (data) {
                    members = Object.values(data);
                    filteredMembers = [...members];
                    renderMembers();
                    renderSchedule();
                }
            });
        }

        function saveToFirebase() {
            const membersObj = {};
            members.forEach((member, index) => {
                membersObj[index] = member;
            });
            
            firebaseDb.ref('members').set(membersObj);
            firebaseDb.ref('settings').set(settings);
        }

        // ì‹œê°„ ì¶©ëŒ ê²€ì‚¬ í•¨ìˆ˜
        function checkTimeConflict(day, startTime, endTime, excludeIndex = null) {
            for (let i = 0; i < members.length; i++) {
                if (excludeIndex !== null && i === excludeIndex) continue;
                
                const member = members[i];
                if (member.day === day && member.startTime && member.endTime) {
                    // ì‹œê°„ ë¹„êµ (ë¬¸ìì—´ë¡œ ë¹„êµ)
                    if ((startTime >= member.startTime && startTime < member.endTime) ||
                        (endTime > member.startTime && endTime <= member.endTime) ||
                        (startTime <= member.startTime && endTime >= member.endTime)) {
                        return {
                            conflict: true,
                            memberName: member.name,
                            existingTime: `${member.startTime}~${member.endTime}`
                        };
                    }
                }
            }
            return { conflict: false };
        }

        function searchMembers() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            
            if (searchTerm === '') {
                filteredMembers = [...members];
            } else {
                filteredMembers = members.filter(member => {
                    return member.name.toLowerCase().includes(searchTerm) ||
                           (member.phone && member.phone.includes(searchTerm));
                });
            }
            
            sortMembers(currentSort);
        }

        function sortMembers(sortBy) {
            currentSort = sortBy;
            
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
            
            switch(sortBy) {
                case 'name':
                    filteredMembers.sort((a, b) => a.name.localeCompare(b.name));
                    break;
                case 'joinDate':
                    filteredMembers.sort((a, b) => {
                        if (!a.joinDate) return 1;
                        if (!b.joinDate) return -1;
                        return new Date(b.joinDate) - new Date(a.joinDate);
                    });
                    break;
                case 'fee':
                    filteredMembers.sort((a, b) => (b.fee || 0) - (a.fee || 0));
                    break;
            }
            
            renderMembers();
        }

        function renderMembers() {
            const listEl = document.getElementById('listSection');
            const countEl = document.getElementById('memberCount');
            
            countEl.textContent = members.length;

            if (filteredMembers.length === 0) {
