            saveToFirebase();
            filteredMembers = [...members];
            renderMembers();
            renderSchedule();
            clearForm();
            showAlert('íšŒì› ì •ë³´ê°€ ìˆ˜ì •ë˜ì—ˆìŠµë‹ˆë‹¤!');
        }

        function editMember(index) {
            const member = members[index];
            document.getElementById('name').value = member.name;
            document.getElementById('phone').value = member.phone || '';
            document.getElementById('joinDate').value = member.joinDate || '';
            document.getElementById('fee').value = member.fee || '';
            document.getElementById('dayOfWeek').value = member.day || '';
            document.getElementById('startTime').value = member.startTime || '';
